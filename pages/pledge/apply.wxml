<view class="list">
    <view bindtap="changeTable" id="1" class="{{hover_class1}}">申请</view>
    <view bindtap="changeTable" id="2" class="{{hover_class2}}">流程</view>
</view>

<!--申请-->
<view class="hczy" style="margin-top:10px" hidden="{{tab_view1}}">
    <view class="weui_cell">
        <view class="weui_cella">
            <label class="weui_label">申请人姓名</label>
        </view>
        <view class="weui_cellb">
            <input class="weui_input" type="text" maxlength="5" placeholder="请输入申请人姓名" bindinput="nameBind" />
        </view>
    </view>
    <view class="weui_cell">
        <view class="weui_cella">
            <label class="weui_label">手机号</label>
        </view>
        <view class="weui_cellb">
            <input class="weui_input" type="number" maxlength="11" placeholder="请输入联系人手机号" bindinput="mobileBind" />
        </view>
    </view>
    <view class="weui_cell">
        <view class="weui_cella">
            <label class="weui_label">融资金额</label>
        </view>
        <view class="weui_cellb">
            <input class="weui_input" type="number" maxlength="15" placeholder="请输入融资金额" bindinput="moneyBind" />
        </view>
    </view>

    <view class="weui_cell" >
        <view class="weui_cella">
            <label class="weui_label">质押批号</label>
        </view>
        <view class="weui_cellb">
            <textarea style="height:60px;line-height:20px;padding:10px 0;" placeholder="多个批号用逗号隔开" bindtap="batchIDsBind"></textarea>
        </view>
    </view>
    <view class="weui_btn_area">
        <button class="but_green" bindtap="applyLoan">提交申请</button>
    </view>  
</view>


<!--流程-->
<view class="wdcj_sjz" hidden="{{tab_view2}}">
    <view class="sjz_list">
        <view class="d"><text>1</text></view>
        <view class="a">提交申请</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>2</text></view>
        <view class="a">资质审核</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>3</text></view>
        <view class="a">签订协议</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>4</text></view>
        <view class="a">生成仓单</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>5</text></view>
        <view class="a">放款</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>6</text></view>
        <view class="a">客户赎货</view>
    </view>
    <view class="sjz_list">
        <view class="d"><text>6</text></view>
        <view class="a">结算</view>
    </view>
</view>




