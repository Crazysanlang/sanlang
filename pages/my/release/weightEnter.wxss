.weightEnter{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}
.weightEnter view:first-child{
  font-size: 30rpx;
  color: #333;
}
.weightEnter view:last-child{
  width: 66%;
  text-align: left;
}
input:placeholder{
  font-size: 24rpx;
  color: #ccc;
}

.isCL{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.isCL view:first-child{
  font-size: 30rpx;
  color: #333;
}

.botBtn{
  margin: 0 40rpx;
  background-color: #14bab4;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  border-radius: 3px;
  margin-top: 60rpx;
}