@import "/pages/style/detailStyle.wxss";

.tab{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
}
.tab view{
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  background-color: #f5f5f5;
}
.tab view.cur text{
  padding: 20rpx;
  color: #eb344f;
  border-bottom: 2px solid #eb344f;
}
/* .tab view:first-child{
  border-right: 1px solid #dedede;
} */
.contHide{
  display: none;
}
.goodDetail{
  background-color: #fff;
  padding-bottom: 100rpx;
  padding-top: 20rpx;
}
.goodDetail .border{
  width: 100%;
  border-top: 1px dashed #e3e3e3;
  margin: 30rpx 0;
}
.detailList{
  display: flex;
  justify-content: flex-start;
}
.detailList view{
  width: 50%;
  height: 30px;
  line-height: 30px;
  font-size: 26rpx;
  color: #333;
}
.goodDetail view{
  font-size: 26rpx;
  color: #333;
}

.describe{
  padding-bottom: 100rpx;
  padding-top: 20rpx;
  background-color: #fff;
}
.describe .dTit{
  text-align: center;
  position: relative;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.describe .dTit text{
  color: #eb344f;
}
.describe .dTit .line{
    width: 68rpx;
    height: 2px;
    background-color: #666;
    position: absolute;
}
.describe .dTit .line1{
  top: 45%;
  left: 27%;
}
.describe .dTit .line2{
  top: 45%;
  right: 27%;
}
.describe .dText{
  padding: 0 46rpx;
  font-size: 24rpx;
  text-indent: 48rpx;
}
.describe .dPic image{
  width: 668rpx;
  height: 410rpx;
  margin-bottom: 20rpx;
}



.botBtn{
  width: 100%;
  height: 87rpx;
  /* line-height: 87rpx; */
  position: fixed;
  bottom: 0;
  left: 0;
}

.botBtn>view{
  /* display: inline-block; */
  float: left;
  text-align: center;
}

.botBtn .zx{
  width: 20%;
  height: 87rpx;
  background-color: #fff;
  box-sizing: border-box;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  font-size: 26rpx;
  color: #333;
  line-height:85rpx
}
.botBtn .tx{
  width: 20%;
  height: 87rpx;
   box-sizing: border-box;
  border-top: 1px solid #999;
  border-right: 1px solid #999;
  background-color: #fff;
  font-size: 26rpx;
  color: #333;
  line-height:85rpx
}
.botBtn .yy{
  width: 20%;
  height: 87rpx;
   box-sizing: border-box;
  border-top: 1px solid #999;
  background-color: #fff;
  font-size: 26rpx;
  color: #333;
  line-height:85rpx
}
.botBtn .btn{
  width: 40%; 
  height: 87rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: wrap;

}
  .botBtn .btn text{
  font-size: 20rpx;
} 
.botBtn .btn text:first-child{
  font-size: 28rpx;
} 
/* 底部按钮颜色 */
.botBtn .btn.nowRun{
  background-color: #eb344f;
  color: #fff;
}
.botBtn .btn.noStart{
  background-color: #14bab4;  
}