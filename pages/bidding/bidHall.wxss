}




.record{
  background-color: #fff;
  padding: 0 23rpx;
  padding-bottom: 10rpx;
}

.record .rTop{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 95rpx;
  line-height: 95rpx;
}
.record .rTop view:first-child{
