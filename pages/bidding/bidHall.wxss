page{
  background-color: #dedede;
  padding-bottom: 100rpx;
}

.time{
  height: 70rpx;
  line-height: 70rpx;
  background-color: #eb344f;
  padding: 0 22rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.time view{
  color: #fff;
}
.time view:first-child{
  font-size:28rpx;
}
.time view:last-child{
  font-size:38rpx;
}
.time .mid{
  font-size: 16rpx;
}
.time .mid text{
  font-size: 40rpx;
  vertical-align: middle;
}



/* 产品信息 */
.goodsMsg{
  padding: 0 40rpx;
  background-color: #fff;
  border-bottom:1px dashed #dedede;
}
.goodsMsg .goodName{
  height: 66rpx;
  line-height: 66rpx;
  color: #333;
  font-size: 28rpx;
}
.goodsMsg .msg{
  display: flex;
  justify-content: space-between;
}
.goodsMsg .msg .ml{
  display: flex;
  flex-wrap: wrap;
  align-content: space-around;
  height: 152rpx;
}
.goodsMsg .msg .ml .SX{
  display: flex;
  justify-content: flex-start;
}
.goodsMsg .msg .ml .SX view{
  font-size: 24rpx;
  color: #999;
}
.goodsMsg .msg .ml .SX view:first-child{
  margin-right: 30rpx;
}
.goodsMsg .msg .ml .SX view text{
  color: #333;
  font-size: 26rpx;
}
.goodsMsg .msg .ml .weight{
  font-size: 22rpx;
  color: #999;
  align-self: flex-end;
}
.goodsMsg .msg .ml .weight .weightNum{
  font-size: 36rpx;
}
/* 重量 */
/* 正在进行 */
.goodsMsg.nowRun .msg .ml .weight .weightNum{
  color: #eb344f;
}
/* 未开始 */
.goodsMsg.noStart .msg .ml .weight .weightNum{
  color: #14bab4;
}

.goodsMsg .msg .ml .weight .qb{
  font-size: 20rpx;
  color: #000;
}
.goodsMsg .msg .mr{
  text-align: right;
  width: 30%;
}
.goodsMsg .msg .mr view:first-child{
  color: #666;
}
.goodsMsg .msg .mr view{
  font-size:20rpx;
  color: #999;
}
.goodsMsg .msg .mr .price text{
  font-size: 44rpx;
  font-family: "Arial"
}
/* 价格 */
/* 正在进行 */
.goodsMsg.nowRun .msg .mr .price text{
  color: #eb344f;
}
/* 未开始 */
.goodsMsg.noStart .msg .mr .price text{
  color: #14bab4;
}


