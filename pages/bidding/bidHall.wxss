.PW .minus,.PW .plus{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  /* background-color: #dedede; */
  color: #eb344f;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 3px;
  border: 1px solid #eb344f;

}
.PW .minus text,.PW .plus text{
  font-size: 34rpx;
}
.PW .minus{
  position: absolute;
  left: 125rpx;
  top: 116rpx;
}
.PW .plus{
  position: absolute;
  right: 125rpx;
  top: 116rpx;
}

.deposRule{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 23rpx;
  background-color: #fff;
  padding-top: 40rpx;
  padding-bottom: 20rpx;
  margin-bottom: 30rpx;
}
.deposRule view:first-child{
